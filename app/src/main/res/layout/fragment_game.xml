<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".controller.GameFragment">

  <Button
    android:id="@+id/back_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/half_dynamic_spacing"
    android:text="Back"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

  <Button
    android:id="@+id/column1_row1"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/half_dynamic_spacing"
    android:padding="@dimen/half_dynamic_spacing"
    app:layout_constraintBottom_toTopOf="@id/column1_row2"
    app:layout_constraintEnd_toStartOf="@id/column2_row1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <Button
    android:id="@+id/column1_row2"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/half_dynamic_spacing"
    android:padding="@dimen/half_dynamic_spacing"
    app:layout_constraintBottom_toTopOf="@id/column1_row3"
    app:layout_constraintEnd_toStartOf="@id/column2_row2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/column1_row1"/>
  <Button
    android:id="@+id/column1_row3"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/half_dynamic_spacing"
    android:padding="@dimen/half_dynamic_spacing"
    app:layout_constraintBottom_toTopOf="@id/column1_row4"
    app:layout_constraintEnd_toStartOf="@id/column2_row3"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/column1_row2"/>
  <Button
    android:id="@+id/column1_row4"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/half_dynamic_spacing"
    android:padding="@dimen/half_dynamic_spacing"
    app:layout_constraintBottom_toTopOf="@id/back_button"
    app:layout_constraintEnd_toStartOf="@id/column2_row4"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/column1_row3"/>

  <Button
    android:id="@+id/column2_row1"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/half_dynamic_spacing"
    android:padding="@dimen/half_dynamic_spacing"
    app:layout_constraintBottom_toTopOf="@id/column2_row2"
    app:layout_constraintEnd_toStartOf="@id/column3_row1"
    app:layout_constraintStart_toEndOf="@id/column1_row1"
    app:layout_constraintTop_toTopOf="parent"/>
  <Button
    android:id="@+id/column2_row2"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/half_dynamic_spacing"
    android:padding="@dimen/half_dynamic_spacing"
    app:layout_constraintBottom_toTopOf="@id/column2_row3"
    app:layout_constraintEnd_toStartOf="@id/column3_row2"
    app:layout_constraintStart_toEndOf="@id/column1_row2"
    app:layout_constraintTop_toBottomOf="@id/column2_row1"/>
  <Button
    android:id="@+id/column2_row3"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/half_dynamic_spacing"
    android:padding="@dimen/half_dynamic_spacing"
    app:layout_constraintBottom_toTopOf="@id/column2_row4"
    app:layout_constraintEnd_toStartOf="@id/column3_row3"
    app:layout_constraintStart_toEndOf="@id/column1_row3"
    app:layout_constraintTop_toBottomOf="@id/column2_row2"/>
  <Button
    android:id="@+id/column2_row4"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/half_dynamic_spacing"
    android:padding="@dimen/half_dynamic_spacing"
    app:layout_constraintBottom_toTopOf="@id/back_button"
    app:layout_constraintEnd_toStartOf="@id/column3_row4"
    app:layout_constraintStart_toEndOf="@id/column1_row4"
    app:layout_constraintTop_toBottomOf="@id/column2_row3"/>

  <Button
    android:id="@+id/column3_row1"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/half_dynamic_spacing"
    android:padding="@dimen/half_dynamic_spacing"
    app:layout_constraintBottom_toTopOf="@id/column3_row2"
    app:layout_constraintEnd_toStartOf="@id/column4_row1"
    app:layout_constraintStart_toEndOf="@id/column2_row1"
    app:layout_constraintTop_toTopOf="parent"/>
  <Button
    android:id="@+id/column3_row2"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/half_dynamic_spacing"
    android:padding="@dimen/half_dynamic_spacing"
    app:layout_constraintBottom_toTopOf="@id/column3_row3"
    app:layout_constraintEnd_toStartOf="@id/column4_row2"
    app:layout_constraintStart_toEndOf="@id/column2_row2"
    app:layout_constraintTop_toBottomOf="@id/column3_row1"/>
  <Button
    android:id="@+id/column3_row3"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/half_dynamic_spacing"
    android:padding="@dimen/half_dynamic_spacing"
    app:layout_constraintBottom_toTopOf="@id/column3_row4"
    app:layout_constraintEnd_toStartOf="@id/column4_row3"
    app:layout_constraintStart_toEndOf="@id/column2_row3"
    app:layout_constraintTop_toBottomOf="@id/column3_row2"/>
  <Button
    android:id="@+id/column3_row4"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/half_dynamic_spacing"
    android:padding="@dimen/half_dynamic_spacing"
    app:layout_constraintBottom_toTopOf="@id/back_button"
    app:layout_constraintEnd_toStartOf="@id/column4_row4"
    app:layout_constraintStart_toEndOf="@id/column2_row4"
    app:layout_constraintTop_toBottomOf="@id/column3_row3"/>

  <Button
    android:id="@+id/column4_row1"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/half_dynamic_spacing"
    android:padding="@dimen/half_dynamic_spacing"
    app:layout_constraintBottom_toTopOf="@id/column4_row2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/column3_row1"
    app:layout_constraintTop_toTopOf="parent"/>
  <Button
    android:id="@+id/column4_row2"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/half_dynamic_spacing"
    android:padding="@dimen/half_dynamic_spacing"
    app:layout_constraintBottom_toTopOf="@id/column4_row3"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/column3_row2"
    app:layout_constraintTop_toBottomOf="@id/column4_row1"/>
  <Button
    android:id="@+id/column4_row3"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/half_dynamic_spacing"
    android:padding="@dimen/half_dynamic_spacing"
    app:layout_constraintBottom_toTopOf="@id/column4_row4"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/column3_row3"
    app:layout_constraintTop_toBottomOf="@id/column4_row2"/>
  <Button
    android:id="@+id/column4_row4"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/half_dynamic_spacing"
    android:padding="@dimen/half_dynamic_spacing"
    app:layout_constraintBottom_toTopOf="@id/back_button"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/column3_row4"
    app:layout_constraintTop_toBottomOf="@id/column4_row3"/>

  <TextView
    android:id="@+id/match_attempts"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/half_dynamic_spacing"
    android:padding="@dimen/half_dynamic_spacing"
    android:text="Match Attempts: "
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/timer"
    app:layout_constraintStart_toEndOf="@id/back_button"
    app:layout_constraintTop_toBottomOf="@id/column1_row4"/>
  <TextView
    android:id="@+id/timer"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/half_dynamic_spacing"
    android:padding="@dimen/half_dynamic_spacing"
    android:text="Time: "
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/match_attempts"
    app:layout_constraintTop_toBottomOf="@id/column1_row4"/>

</androidx.constraintlayout.widget.ConstraintLayout>